<!DOCTYPE html>
<html lang="en" data-theme="dim">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= project.title %> - Climate Solutions
    </title>
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar', {page: '' }) %>

        <div class="container mx-auto px-4 py-8">
            <div class="hero min-h-64 bg-base-200 rounded-lg">
                <div class="hero-content text-center">
                    <div class="max-w-2xl">
                        <h1 class="text-5xl font-bold">
                            <%= project.title %>
                        </h1>
                        <p class="py-6">Below, you will find detailed information about the project: <%= project.title
                                %>
                        </p>
                    </div>
                </div>
            </div>

            <div class="mt-12">
                <div class="card bg-base-100 shadow-xl">
                    <figure>
                        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>"
                            class="w-full h-64 object-cover">
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title text-2xl">Project Introduction</h2>
                        <p class="text-lg mb-6">
                            <%= project.intro_short %>
                        </p>

                        <h2 class="card-title text-2xl">Impact</h2>
                        <p class="text-lg mb-6">
                            <%= project.impact %>
                        </p>

                        <div id="quote-section" class="bg-base-200 p-6 rounded-lg mb-6">
                            <h3 class="text-xl font-semibold mb-4">Inspirational Quote</h3>
                            <p id="quote-text" class="text-lg italic mb-2">Loading quote...</p>
                            <p id="quote-author" class="text-right font-bold"></p>
                        </div>

                        <div class="card-actions justify-between">
                            <a href="#" onclick="history.back(); return false;" class="btn btn-outline">← Back</a>
                            <div class="flex gap-2">
                                <% if(session.user){ %>
                                    <a href="/solutions/editProject/<%= project.id %>" class="btn btn-success">Edit
                                        Project</a>
                                    <% } %>
                                        <a href="<%= project.original_source_url %>" class="btn btn-primary"
                                            target="_blank">More Info →</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded mt-12">
            <div>
                <p>© 2025 Climate Solutions - Making a difference for our planet</p>
            </div>
        </footer>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                fetch('https://dummyjson.com/quotes/random')
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('quote-text').innerText = `"${data.quote}"`;
                        document.getElementById('quote-author').innerText = `— ${data.author}`;
                    })
                    .catch(error => {
                        document.getElementById('quote-text').innerText = 'Quote unavailable';
                        document.getElementById('quote-author').innerText = '';
                    });
            });
        </script>
</body>

</html>