<!DOCTYPE html>
<html lang="en" data-theme="dim">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project - Climate Solutions</title>
    <link href="/css/main.css" rel="stylesheet">
</head>

<body>
    <%- include('partials/navbar', {page: '' }) %>
        <div class="container mx-auto px-4 py-8">
            <div class="hero min-h-64 bg-base-200 rounded-lg">
                <div class="hero-content text-center">
                    <div class="max-w-2xl">
                        <h1 class="text-5xl font-bold">Edit Project</h1>
                        <p class="py-6">
                            <%= project.title %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="mt-12">
                <div class="card bg-base-100 shadow-xl max-w-2xl mx-auto">
                    <div class="card-body">
                        <form method="POST" action="/solutions/editProject">
                            <input type="hidden" name="id" value="<%= project.id %>">

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Title</span>
                                </label>
                                <input type="text" name="title" class="input input-bordered"
                                    value="<%= project.title %>" required>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Feature Image URL</span>
                                </label>
                                <input type="url" name="feature_img_url" class="input input-bordered"
                                    value="<%= project.feature_img_url %>" required>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Sector</span>
                                </label>
                                <select name="sector_id" class="select select-bordered" required>
                                    <% sectors.forEach(sector=> { %>
                                        <option <%=(project.sector_id==sector.id) ? "selected" : "" %> value="<%=
                                                sector.id %>">
                                                <%= sector.sector_name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Short Introduction</span>
                                </label>
                                <textarea name="intro_short" class="textarea textarea-bordered"
                                    required><%= project.intro_short %></textarea>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Summary</span>
                                </label>
                                <textarea name="summary_short" class="textarea textarea-bordered"
                                    required><%= project.summary_short %></textarea>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Impact</span>
                                </label>
                                <textarea name="impact" class="textarea textarea-bordered"
                                    required><%= project.impact %></textarea>
                            </div>

                            <div class="form-control mb-4">
                                <label class="label">
                                    <span class="label-text">Original Source URL</span>
                                </label>
                                <input type="url" name="original_source_url" class="input input-bordered"
                                    value="<%= project.original_source_url %>" required>
                            </div>

                            <div class="form-control mt-6">
                                <div class="flex gap-4 justify-between">
                                    <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error" onclick="return confirm('Are you sure you want to delete this project?')">Delete Project</a>
                                    <button type="submit" class="btn btn-primary">Update Project</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded mt-12">
            <div>
                <p>Â© 2025 Climate Solutions - Making a difference for our planet</p>
            </div>
        </footer>
</body>

</html>